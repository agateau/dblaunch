#!/bin/sh
set -e

SIZES="128 64 48 32 22 16"

PROGNAME=$(basename $0)

die() {
    echo "$PROGNAME: $*" >&2
    exit 1
}

usage() {
    if [ "$*" != "" ] ; then
        echo "Error: $*"
    fi

    cat << EOF
Usage: $PROGNAME [OPTION ...] [png_file] [icon_name]
Given a png file and an icon name, install resized versions of the icon using
xdg-icon-resource install

Options:
  -h, --help          display this usage message and exit
  --vendor [VENDOR]   install the icon as $VENDOR-$icon_name
EOF

    exit 1
}

png_file=""
icon_name=""
vendor="iconinstaller"
while [ $# -gt 0 ] ; do
    case "$1" in
    -h|--help)
        usage
        ;;
    --vendor)
        vendor="$2"
        shift
        ;;
    -*)
        usage "Unknown option '$1'"
        ;;
    *)
        if [ -z "$png_file" ] ; then
            png_file="$1"
        elif [ -z "$icon_name" ] ; then
            icon_name="$1"
        else
            usage "Too many arguments"
        fi
        ;;
    esac
    shift
done

if [ -z "$icon_name" ] ; then
    usage "Not enough arguments"
fi

for size in $SIZES ; do
    echo "$size"
    convert -resize ${size}x${size} $png_file tmp.png
    xdg-icon-resource install --size $size tmp.png $vendor-$icon_name
    rm tmp.png
done


# vim:set ts=4 sw=4 et:
